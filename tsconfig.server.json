{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "server/dist", // Coloca o JS compilado em 'server/dist'
    "rootDir": "server",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["server/**/*.ts"], // Compila APENAS os arquivos .ts dentro da pasta 'server'
  "exclude": ["node_modules", "src"]
}
